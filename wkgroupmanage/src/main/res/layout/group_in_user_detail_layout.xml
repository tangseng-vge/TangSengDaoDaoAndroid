<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/topView"
        style="@style/view_line_15" />

    <LinearLayout
        android:id="@+id/forbiddenLayout"
        style="@style/layoutBg">

        <TextView
            android:id="@+id/timeTv"
            style="@style/leftTextView"
            android:text="@string/forbidden_with_group_member" />

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_weight="3"
            android:gravity="end"
            android:textColor="@color/color999"
            android:textSize="@dimen/font_size_14"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatImageView style="@style/arrow_right_iv" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/deleteMemberLayout"
        style="@style/layoutBg">

        <TextView
            style="@style/leftTextView"
            android:text="@string/delete_member" />

    </LinearLayout>

    <View
        android:id="@+id/bottomView"
        style="@style/view_line_padding"
        android:visibility="gone" />
</LinearLayout>